<h1>+++++++ <%=  @cocktail.name %> +++++++</h1>
<h2><%= "Recipe" %></h2>
<br>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <p><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to "Remove ingredient", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></p>
    </li>
  <% end %>
</ul>
<br>
<h2>Add an ingredient</h2>

<%= render "doses/new", cocktail: @cocktail, dose: @dose %>

<br>
<p><%= link_to "Back to cocktails", cocktails_path %> ⏎</p>

